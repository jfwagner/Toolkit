/***************************************************
 * use
 ***************************************************/

 use, sequence=SPS;




/***************************************************
 * TWISS
 ***************************************************/

 set,  format="11.8f";
 set,  format="-18s";

 select, flag=twiss, clear;
 select, flag=twiss
       , column=name,s,x,px,alfx,betx,dx,mux,y,py,alfy,bety,dy,muy;

 twiss, DELTAP=0.000,  centre;


/***************************************************
 * Write twiss table.
 ***************************************************/

 write,table=twiss,file="../out/optics_ft_noqs_ext.outx";

!write,table=twiss;
!value,table(twiss,SPS$END,dx);




 stop;





